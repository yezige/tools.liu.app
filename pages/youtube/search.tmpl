{{template "layout" $}}

{{define "body"}}
<link rel="stylesheet" href="/static/css/youtube/index.css" />
<article id="page">
  <h1 class="title">{{ .Page.BodyName }}</h1>
  <div class="content">
    <div>
      <div class="center_box">
        <div class="search_box hover_shadow hover_bghigh">
          <input class="search_input" id="search" type="search" value="{{ .Q }}"/>
          <span class="search_submit"></span>
        </div>
      </div>
      <div class="searchlist_box">
        <h2 class="title">{{ I "searh-result" }}</h2>
        <div style="padding-bottom: 20px;">
          {{template "third/adsbygoogle" index $.Page.AdsConfig 0 }}
        </div>
        <div class="videos">
          {{ range .SearchList }}
          <div class="video">
            <a class="video_link" href="/youtube/download?id={{ .ID.VideoID }}">
              <img class="video_thumbnail lazyload" data-src="{{ .Snippet.Thumbnails.High.Url }}" src="/static/images/whiteboard.svg" alt="{{ .Snippet.Title }}" />
            </a>
            <div class="video_info">
              <a href="https://www.youtube.com/watch?v={{ .ID.VideoID }}" target="_blank">
                <div class="video_title" title="{{ .Snippet.Title }}">{{ .Snippet.Title }}</div>
              </a>
              <p class="video_description">{{ .Snippet.Description }}</p>
              <a class="download_box absolute" href="/youtube/download?id={{ .ID.VideoID }}">
                <span class="download_btn"></span>
              </a>
            </div>
          </div>
          {{ end }}
        </div>
        <div style="padding-top: 20px;">
          {{template "third/adsbygoogle" index $.Page.AdsConfig 1 }}
        </div>
      </div>
    </div>
  </div>
  <script src="/static/js/youtube/search.js" type="module"></script>

</article>
{{ end }}
