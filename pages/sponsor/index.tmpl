{{template "layout" $}}

{{define "body"}}
<link rel="stylesheet" href="/static/css/tags/index.css" />
<article id="page">
  <h1 class="title">{{ .Page.BodyName }}</h1>
  <div class="title mg_b_15">{{ I "sponsor-desc" }}</div>
  <div class="content">
    <div class="tag_box">
      <div class="tags">
        {{ range .Page.Site.Sponsors }}
          {{ if eq . $.Name }}
          <span class="tag bold shadow bghigh">{{ . }}</span>
          {{ else }}
          <a class="tag hover_shadow hover_bghigh" href="/sponsor?name={{ . }}">{{ . }}</a>
          {{ end}}
        {{ end }}
      </div>
    </div>
  </div>
</article>
{{ end }}
